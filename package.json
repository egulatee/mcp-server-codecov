{
  "name": "@egulatee/mcp-codecov",
  "version": "2.0.0",
  "description": "MCP server for querying Codecov coverage data with configurable URL support",
  "mcpName": "@egulatee/codecov",
  "publisher": "egulatee",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "mcp-codecov": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run src/__tests__/cli.test.ts"
  },
  "keywords": [
    "mcp",
    "codecov",
    "coverage",
    "model-context-protocol",
    "code-coverage",
    "test-coverage",
    "ci-cd",
    "testing",
    "quality-assurance",
    "developer-tools"
  ],
  "author": {
    "name": "Eric Gulatee",
    "url": "https://github.com/egulatee"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egulatee/mcp-server-codecov.git"
  },
  "homepage": "https://github.com/egulatee/mcp-server-codecov#readme",
  "bugs": {
    "url": "https://github.com/egulatee/mcp-server-codecov/issues"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
