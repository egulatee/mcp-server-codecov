{
  "name": "mcp-server-codecov",
  "version": "1.0.3",
  "description": "MCP server for querying Codecov coverage data with configurable URL support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-server-codecov": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run src/__tests__/cli.test.ts"
  },
  "keywords": [
    "mcp",
    "codecov",
    "coverage",
    "model-context-protocol"
  ],
  "author": "Eric Gulatee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egulatee/mcp-server-codecov.git"
  },
  "homepage": "https://github.com/egulatee/mcp-server-codecov#readme",
  "bugs": {
    "url": "https://github.com/egulatee/mcp-server-codecov/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
